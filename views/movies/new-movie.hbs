<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>¡Cree la película de su vida!</h2>
            <hr>

            <form action="/movies/create" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Género</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Trama</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Reparto</label>
                    <select class="form-select" name="cast" id="cast" multiple>
                        {{#each celebrity}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Crear movie</button>
                </div>

            </form>
        </div>
    </div>
</div>